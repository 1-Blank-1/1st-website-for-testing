*{
	font-family: Arial;
}

.whole_navigation{
	display: grid;
	grid-template-columns: 1fr 2fr;
}

.navigation_bars{
	display: flex;
	justify-content: space-evenly;
	block-size: 80px;
	padding: 10px;
}

li {
	position: relative;
	top: 100%;
	font-weight: bold;
}

.navigation_texts {
	line-height: 1em;
	padding: 2px;
	list-style-type: none;
	font-size: 16px;


}

.navigation_texts:hover {
background: #C8EDF3;
color: #303249;

border-radius: 10px;
}

body {
	/*setting up the background properties*/
	background-color: #f5f5f5;

}

hr {
	margin-bottom: 50px;
	background-color: #8f8c8c;
	height: 3px;
	margin-top: 0px;
	padding-top: 0px;
}

.body_placeholder{
	height: 800px;
	border: 5px solid black;

	font-size: 48px;
	
}

.body_text{
	position: relative;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: max-content;
}

nav {
	background-color: #C3DBFF;
	background-image: url("../images/blank-logo.png"); /*logo*/
	background-repeat: no-repeat;
	background-attachment: scroll;
	background-position: 3% 50%;
	background-size: 120px 120px;
	height: 150px;
	padding: 0px;
	margin: 0px;
}