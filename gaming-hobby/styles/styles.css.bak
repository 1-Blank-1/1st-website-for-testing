* {
	margin: 5px;
	font-family: Arial;
}
h1 {
  color: red;
}

li {
  list-style-type: none;
  font-size: 16px;
}

h3 + ul + br + br + p {
	color: black;
	font: 16px Arial
}

body {
		background: #F0EFF9 no-repeat right top/cover;
		background-attachment: scroll; /*fixed scroll local */
		}
		
div.original {
	display: flex;
	background: red no-repeat;
	padding: 100px;
}

div.try {

	background: red no-repeat;
	padding: 20px;
	text-align: center;
}

div.try:hover {
	background: white no-repeat;
	padding: 20px;
	font-size: 24px;
	transform: scale(2);
}

div.try:visited {
	background: white no-repeat;
	padding: 20px;
	font-size: 48px;
	transform: scale(2);
}

div.try:focus {
	background: reset;
	padding: 20px;
	font-size: 48px;
}

div.Lorem_div {
	position: relative;
	block-size: 100px;
inline-size: min-content;
	border: 5px solid black;
	overflow-wrap: break-word;
	padding: 5px;
}

/* NAVIGATION BAR --------------------------------------------------------------- START*/
.whole_navigation{
	display: grid;
	grid-template-columns: 1fr 1.5fr;
}

.navigation_bars{
	display: flex;
	justify-content: space-evenly;
	block-size: 80px;
	padding: 10px;
}

li {
	
}

.navigation_texts {
	line-height: 1em;
	padding: 2px;
	position: relative;
	top: 100%;
	font-weight: bold;


}

.navigation_texts:hover {
background: #C8EDF3;
color: #303249;

border-radius: 10px;
}

body {
	/*setting up the background properties*/
	background-color: #f5f5f5;

}

hr {
	margin-bottom: 50px;
	background-color: #8f8c8c;
	height: 3px;
	margin-top: 0px;
	padding-top: 0px;
}

.body_placeholder{
	height: 800px;
	border: 5px solid black;

	font-size: 48px;
	
}

.body_text{
	position: relative;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	width: max-content;
}

nav {
	background-color: #C3DBFF;
	background-image: url("../../images/blank-logo.png"); /*logo*/
	background-repeat: no-repeat;
	background-attachment: scroll;
	background-position: 3% 50%;
	background-size: 120px 120px;
	height: 150px;
	padding: 0px;
	margin: 0px;
}

/* NAVIGATION BAR --------------------------------------------------------------- END*/

/* images of table of contents */
.mmorpg_image {
	width: 300px;
	height: 300px;
	border: 5px solid black;
}